@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Monthly Payment";
}

<h3><u>Results:</u></h3>

<div class="container">
	<!--Displays Results-->
    <p><b>Loan Amount:</b> $@ViewBag.Amount</p>
    <p><b>Periodic Interest Rate:</b> % @ViewBag.Rate</p>
    <p><b>Months to Pay:</b> @ViewBag.Time</p>
    <p><b>Monthly Payment:</b> $@ViewBag.MonPay</p>
    <p><b>Total Interest:</b> $@ViewBag.IntPay</p>
	<p><b><u>Total Cost:</u></b> $@ViewBag.Total</p>
</div>

<div class="container">
	<!--New Loan Button-->
    <form action="/Home/Page3" method="get">
      <div class="input-group">
        <button type="submit"  class="btn btn-info">New Loan</button>
      </div>
    </form>
    <!--Home Button-->
    <form action="/Home" method="get">
      <div class="input-group">
        <button type="submit"  class="btn btn-primary">Go Home</button>
      </div>
    </form>
</div>

