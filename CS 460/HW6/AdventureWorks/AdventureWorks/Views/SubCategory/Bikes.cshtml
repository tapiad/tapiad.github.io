@model IEnumerable<AdventureWorks.Models.Product>

@{
    ViewBag.Title = "Bikes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h2><u>Type of Bike</u>: <small>Click on a Bike Type</small></h2>
    
    <table class="table table-striped">
        <thead>
            <tr>
                @foreach (string bike in @ViewBag.bikes)
                {
                    <th>
                        <form method="post">
                            <div class="btn-group btn-group-vertical">
                                <button class="btn btn-primary" name="bike" value="@bike">@bike</button>
                            </div>
                        </form>
                    </th>
                }
            </tr>
        </thead>
    </table>
</div>



@if (IsPost)
{
    <div class="container">
        
        <div class="row text-center">
            <img src="~/Images/Bikes.jpg" class="img-thumbnail" alt="Adventure Picture">
        </div>

        <h3><u>The Bikes</u>: <small>Click on a link for more information</small></h3>

        <div class="col-lg-5">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Product Number</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var b in Model)
                {
                        <tr>
                            <td>
                                <a href="/SubCategory/Product?id=@b.ProductID">@b.Name</a>
                            </td>
                            <td>
                                @b.ProductNumber
                            </td>
                            <td>
                                $@b.ListPrice
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}



